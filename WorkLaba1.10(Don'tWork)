#include <stdio.h>
#include <string.h>

// Функция собственной реализации strcat
char* my_strcat(char* dest, const char* src) {
    // 1. Находим конец первой строки
    char* pdest = dest;
    while (*pdest != '\\0')
        pdest++;  // Идём до конца первой строки

    // 2. Копируем вторую строку в конец первой
    while ((*pdest++ = *src++) != '\\0')
        ;  // Копируем каждый символ второй строки, пока не встретим терминал '\\0'

    return dest;
}

// Демонстрационная функция
int main() {
    char destination[100];  // Достаточно большой буфер для объединения строк
    char source[100];       // Место для второго текста

    // Запрашиваем первую строку у пользователя
    printf("Введите первую строку: ");
    fgets(destination, sizeof(destination), stdin);
    destination[strcspn(destination, "\\n")] = '\\0';  // Убираем символ перехода на новую строку

    // Запрашиваем вторую строку у пользователя
    printf("Введите вторую строку: ");
    fgets(source, sizeof(source), stdin);
    source[strcspn(source, "\\n")] = '\\0';  // Убираем символ перехода на новую строку

    // Объединяем строки
    my_strcat(destination, source);

    // Показываем результат
    printf("Объединённая строка: %s\\n", destination);

    return 0;
}
